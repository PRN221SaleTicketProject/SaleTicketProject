@page
@model SaleTicketProject.Pages.RegisterModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(45deg, lightyellow, yellow 10%, orange 20%, darkorange 40%, darkorange 60%, orange 80%, yellow 90%, lightyellow);
            justify-content: center;
            align-items: center;
        }

        .container {
            text-align: center;
        }

        h1 {
            font-size: 36px;
            font-weight: bold;
            background: linear-gradient(0deg, white 9.3%, wheat 100%);
            -webkit-background-clip: text;
            color: transparent;
            margin-bottom: 60px;
        }

        label {
            display: block;
            margin: 10px 0 5px;
            font-size: 16px;
            color: #333;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 12px 15px;
            margin-bottom: 20px;
            font-size: 16px;
            color: #333;
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid #ddd;
            border-radius: 5px;
            outline: none;
            box-sizing: border-box;
        }

        input[type="password"] {
            font-style: normal;
        }

        button {
            width: 100%;
            padding: 15px 0;
            background-color: #FFCFDCB7;
            color: #333;
            font-size: 18px;
            font-weight: bold;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            button:hover {
                background-color: #E5C6A8;
            }

        label {
            font-weight: bold;
        }

        form {
            max-width: 800px;
            margin: 0 auto;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 15px;
            padding: 30px 40px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align:left;
        }

        .alert {
            padding: 20px;
            background-color: #f44336;
            color: white;
            margin-bottom: 15px;
        }

            .alert.success {
                background-color: #4CAF50;
            }

            .alert.info {
                background-color: #2196F3;
            }

            .alert.warning {
                background-color: #ff9800;
            }
    </style>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="title">
            <h1>Register</h1>
        </div>
        <form method="post">
            @if (TempData["Message"] != null)
            {
                <div class="alert">
                    @TempData["Message"]
                </div>
            }
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" id="email" asp-for="email" />
            </div>
            <div class="form-group">
                <label for="password">Name</label>
                <input type="text" id="password" asp-for="name" />
            </div>
            <div class="form-group">
                <label for="password">Address</label>
                <input type="text" id="password" asp-for="address" />
            </div>
            <div class="form-group">
                <label for="password">Phone</label>
                <input type="text" id="password" asp-for="phone" />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" asp-for="password" />
            </div>
            <div class ="form-group">
                <label for="password">Confirm Password</label>
                <input type="password" id="password" asp-for="confirm" />
            </div>
            <button type="submit">Register</button>
        </form>
    </div>
</body>
</html>
