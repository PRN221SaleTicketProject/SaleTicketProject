@page
@model SaleTicketProject.Pages.ViewProfileModel
@{
    ViewData["Title"] = "Profile";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Profile Staff</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(45deg, lightyellow, yellow 10%, orange 20%, darkorange 40%, darkorange 60%, orange 80%, yellow 90%, lightyellow);
            font-family: Arial, sans-serif;
        }

        .container {
            margin: 50px auto;
            background: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .subtitle {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
            color: #343a40;
        }

        .label {
            font-size: 14px;
            color: #6c757d;
            margin-top: 10px;
            margin-bottom: 5px;
        }

        .textbox {
            width: 100%;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            margin-bottom: 10px;
        }

            .textbox:disabled {
                background-color: #e9ecef;
            }

        .button {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px;
        }

        .button-primary {
            background-color: #007bff;
            color: #ffffff;
        }

        .button-secondary {
            background-color: #6c757d;
            color: #ffffff;
        }

        .button-primary:hover {
            background-color: #0056b3;
        }

        .button-secondary:hover {
            background-color: #5a6268;
        }

        .button-container {
            margin-top: 20px;
            text-align: center;
        }

        .alert {
            padding: 15px;
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            border-radius: 4px;
            margin-bottom: 20px;
        }

        form {
            max-width: 600px;
            margin: 50px auto;
            margin-left: 300px;
            margin-right: 300px;
            background: #ffffff;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="subtitle">STAFF PROFILE</div>

        <form method="post" id="updateProfileForm">
            <input type="hidden" name="AccountId" value="@Model.Account.Id" />

            <div class="label">Account Id</div>
            <input type="text" class="textbox" value="@Model.Account.Id" disabled />

            <div class="label">Account Name</div>
            <input type="text" class="textbox" name="AccountName" value="@Model.Account.Name" disabled />

            <div class="label">Account Email</div>
            <input type="email" class="textbox" name="AccountEmail" value="@Model.Account.Email" disabled />

            <div class="label">Account Password</div>
            <input type="password" class="textbox" name="AccountPassword" value="@Model.Account.Password" />

            <button type="submit" class="button button-secondary">Update Profile</button>

            <div class="button-container">
                <button class="button button-primary" asp-page-handler="ViewHistoryTransaction">View History Transaction</button>
            </div>
        </form>
    </div>
    @section Scripts {
        <script>
            function updateProfile() {
                fetch('@Url.Page("StaffScreen", "UpdateProfile")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({
                        AccountId: parseInt(document.querySelector('input[name="AccountId"]').value),
                        AccountName: document.querySelector('input[name="AccountName"]').value,
                        AccountEmail: document.querySelector('input[name="AccountEmail"]').value,
                        AccountPassword: document.querySelector('input[name="AccountPassword"]').value
                    })
                }).then(response => response.json()).then(data => {
                    if (data.success) {
                        alert('Update completed!');
                    } else {
                        alert('Update failed!');
                    }
                });
            }
        </script>
    }
</body>
</html>
