@page
@model SaleTicketProject.Pages.Sponsor.SponsorViewModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="/css/fontawesome.css">
    <link rel="stylesheet" href="/css/templatemo-villa-agency.css">
    <link rel="stylesheet" href="/css/owl.css">
    <link rel="stylesheet" href="/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <!--

    TemplateMo 591 villa agency

    https://templatemo.com/tm-591-villa-agency

    -->

    <style>
        .alert {
            padding: 20px;
            background-color: #f44336;
            color: white;
            margin-bottom: 15px;
        }

            .alert.success {
                background-color: #4CAF50;
            }

            .alert.info {
                background-color: #2196F3;
            }

            .alert.warning {
                background-color: #ff9800;
            }
    </style>
</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->

    <div class="sub-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8">
                    <ul class="info">
                        <li><i class="fa fa-envelope"></i> CThon@company.com</li>
                        <li><i class="fa fa-map"></i> Thu Duc District, HCM City, VietNam</li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-4">
                    <ul class="social-links">
                        <li><a href="#"><i class="fab fa-facebook"></i></a></li>
                        <li><a href="https://x.com/minthu" target="_blank"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fab fa-linkedin"></i></a></li>
                        <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="page-heading header-text">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Sponsor View</h3>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert warning">
            @TempData["Message"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="section best-deal">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="section-heading">
                        <h6>| Event</h6>
                        <h2>Your Sponsor Event Here!</h2>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="tabs-content">
                        <div class="row">
                            <div class="nav-wrapper ">
                                <ul class="nav nav-tabs" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="penthouse-tab" data-bs-toggle="tab" data-bs-target="#penthouse" type="button" role="tab" aria-controls="penthouse" aria-selected="false">VIEW</button>
                                    </li>
                                </ul>
                            </div>
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade" id="penthouse" role="tabpanel" aria-labelledby="penthouse-tab">
                                    <div class="row">

                                        @foreach (var article in Model.Events)
                                        {
                                            @if (article.SponsorId == Model.Account.Id)
                                            {
                                                <div class="col-lg-12">
                                                    <div class="info-table">
                                                        <form method="post">
                                                            @if (Model.Account != null)
                                                            {
                                                                <input type="hidden" asp-for="AccountId" value="@Model.Account.Id" />
                                                            }
                                                            <input type="hidden" asp-for="Id" value="@article.Id" />
                                                            @if (Model.Account != null)
                                                            {
                                                                <a asp-page="/Property-details"><img src="@article.Image" alt=""></a>
                                                            }
                                                            <br/>
                                                            <br/>
                                                            <br/>
                                                            <br/>
                                                            <br/>
                                                            <ul>
                                                                <li>Event Name <span>@article.Name</span></li>
                                                                <li>Ticket Quantity <span>@article.TicketQuantity</span></li>
                                                                <li>Ticket Price <span>20,000</span></li>
                                                                <li>Location <span>@article.Location</span></li>
                                                                <li>Date Start <span>@article.DateStart</span></li>
                                                                <li>Date End <span>@article.DateEnd</span></li>
                                                                <li>Category <span>@article.CategoryId</span></li>
                                                            </ul>
                                                            <div class="icon-button">
                                                                <button style="color:white; background:none; border:none" asp-page-handler="NotSponsor" type="submit"> <a><i class="fa fa-calendar"></i> Not Agree</a></button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="section properties" style="padding-bottom: 100px">
        <div class="container">
            <div class="row properties-box">
                @foreach (var article in Model.Events)
                {
                    @if (article.SponsorId == null && article.Status == 1)
                    {
                        <div class="col-lg-4 col-md-6 align-self-center mb-30 properties-items col-md-6 adv">
                            <div class="item">
                                <form method="post">
                                    @if (Model.Account != null)
                                    {
                                        <input type="hidden" asp-for="AccountId" value="@Model.Account.Id" />
                                    }
                                    <input type="hidden" asp-for="Id" value="@article.Id" />
                                    @if (Model.Account != null)
                                    {
                                        <a asp-page="/Property-details"><img src="@article.Image" alt=""></a>
                                    }
                                    <span class="category">@article.Name</span>
                                    <h6>@article.TicketQuantity</h6>
                                    <h4><a asp-page="/Property-details">@article.Location</a></h4>
                                    <ul>
                                        <li>Date Start <span>@article.DateStart</span></li>
                                        <li>Date End <span>@article.DateEnd</span></li>
                                        <li>Category <span>@article.CategoryId</span></li>
                                    </ul>
                                    @*                                 <div >
                            <a asp-page="/Property-details">Schedule a visit</a>
                            </div> *@
                                    @if (Model.Account != null)
                                    {
                                        <div class="main-button">
                                            <button type="submit" asp-page-handler="Sponsor" style="border: none"><a style="color: white">Agree Sponsor</a></button>
                                        </div>
                                    }
                                </form>
                            </div>
                        </div>
                    }
                }

            </div>
            <div class="row">
                <div class="col-lg-12">
                    <ul class="pagination">
                        <li><a href="#">1</a></li>
                        <li><a class="is_active" href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">>></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @*     <footer>
    <div class="container">
    <div class="col-lg-12">
    <p>
    Copyright © 2048 Villa Agency Co., Ltd. All rights reserved.

    Design: <a rel="nofollow" href="https://templatemo.com" target="_blank">TemplateMo</a>
    </p>
    </div>
    </div>
    </footer> *@

    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/isotope.min.js"></script>
    <script src="/js/owl-carousel.js"></script>
    <script src="/js/counter.js"></script>
    <script src="/js/custom.js"></script>

</body>
</html>

